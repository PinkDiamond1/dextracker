[Unit]
Description=gaiacli
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
User=dexd
Group=dexd
PermissionsStartOnly=true
ExecStart=/usr/bin/gaiacli rest-server --laddr {{GAIACLI_ADDRESS}}
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target

